pipeline { 
agent any
stages {


stage( "git integation" ){
steps{
git branch: 'main', url: 'https://github.com/wajid8688/hrmsnew.git'
}
}

stage("install dependcies"){
steps{
script{
sh 'pipenv install --dev'
}
}
}

stage("build image"){
steps{
dir( "/var/lib/jenkins/workspace/python pipe line/HRMS-Server"){
script{
sh "docker build -t abdul ."
}

}
}
}

stage('deploy') {
            steps {
                script {
                    
                    sh 'docker run --name my-python-container -d -p 8000:8000 -e EMAIL_HOST_USER=myuser -e OTHER_VARIABLE=value python'
                }
            }
        }










}
}
